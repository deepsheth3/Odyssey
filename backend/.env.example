# Odyssey Backend Environment Variables
# Copy this file to .env and fill in your values

# CRITICAL: Set a strong secret key in production (use: openssl rand -hex 32)
SECRET_KEY=

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://odyssey-app-deepsheth.vercel.app

# Google APIs (required for places and routes)
GOOGLE_MAPS_API_KEY=
GOOGLE_PLACES_API_KEY=

# OpenAI API (for AI-powered search)
OPENAI_API_KEY=

# Database URL (defaults to SQLite for local development)
# For PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=

# App Environment (development/production)
ENVIRONMENT=development
